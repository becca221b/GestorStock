@using Entities
@using Entities.DTO
    
@model List<CompraDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Compras</h1>

<a asp-controller="Compra" asp-action="Cargar" class="btn btn-primary">Nueva Compra</a>

<div class="col-sm-12 table-responsive table-condensed table-sm" style="font-size:small">
<table class="table table-hover" id="dataTableJedis">
<thead class="thead-light">
    <tr>
        
        
        <th>Producto</th>
        <th>Fecha de Compra</th>
        <th>Cantidad</th>
      
       
    </tr>
</thead>
<tbody>
    @foreach (var c in Model)
    {
        <tr>
            <td>
                @c.Producto
            </td>
            <td>
                @c.FechaCompra.ToString("dd/MM/yyyy")
            </td>
         
            <td>
               @c.Cantidad
            </td>
           
            
        </tr>
    }
</tbody>

</table>
</div>